@{ 
    Layout = "~/View/Shared/HeaderLayout.cshtml";
}

    <!-- breadcrumb -->
    <div class="gen-breadcrumb" style="background-image: url('~/wwwroot/images/background/asset-25.jpeg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <nav aria-label="breadcrumb">
                        <div class="gen-breadcrumb-title">
                            <h1>
                                Upload Video
                            </h1>
                        </div>
                        <div class="gen-breadcrumb-container">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("Index", "Home")">
                                        <i class="fas fa-home mr-2"></i>Home
                                    </a>
                                </li>
                                <li class="breadcrumb-item active">Upload Video</li>
                            </ol>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb -->
    <!-- Register -->
    <section class="gen-section-padding-3 gen-library">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <form>
                        <div class="gen-register-form">
                            <h2>Register</h2>
                            <label>Email address *</label>
                            <input type="email" name="email" value="">
                            <div class="form-button">
                                <button type="submit" name="register" value="Register">Register</button>
                            </div>
                        </div>

                        <div class="gen-login-form">
                            <h2>Login</h2>
                            <label>Username or email address *</label>
                            <input type="text" name="username" value="">
                            <label>Password *</label>
                            <input type="password" name="password">
                            <div class="form-button">
                                <button type="submit" name="register" value="Register" class="mb-0">LOG IN</button>
                                <input type="checkbox" name="checkbox" value="" class="mb-0">
                                <label class="d-inline-block"> Remember me</label>
                            </div>
                        </div>
                        <div class="gen-recover-password">
                            <a href="@Url.Action("RecoverPassword", "Home")">Lost your password?</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Register -->